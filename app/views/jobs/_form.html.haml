= simple_form_for(@job, html: {class: ''}) do |f|
  =f.input :title, label: 'Job Title', input_html: { class: "form-control" }
  =f.input :desc, label: 'Job Description', input_html: { class: "form-control" }
  =f.input :company, label: 'Your company', input_html: { class: "form-control" }
  =f.input :url, label: 'Link to this job', input_html: { class: "form-control" }
  =f.input :category, collection: Job.categories.collect {|s| [s[0].humanize, s[0]]}, prompt: "Select Type of Job", input_html: { class: "dropdown-toggle" }

 
  %br/
  =f.button :submit